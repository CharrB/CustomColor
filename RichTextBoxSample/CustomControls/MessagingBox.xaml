<UserControl x:Class="RichTextBoxSample.CustomControls.MessagingBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RichTextBoxSample.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="MessBox">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Text="ServerCommunicationWindow"
                   FontFamily="Cambria" FontSize="16" HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        <RichTextBox x:Name="Presenter" Background="Black">
            <FlowDocument x:Name="FlowDoc">
                <Paragraph x:Name="DefaultParagraph"/>
            </FlowDocument>
        </RichTextBox>
    </DockPanel>
</UserControl>
